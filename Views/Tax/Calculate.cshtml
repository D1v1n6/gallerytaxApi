@model Project.Models.TaxModel
@{
    ViewBag.Title = "Tax Calculator";
}

<h2>Tax Calculator</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Country</label>
        @Html.DropDownListFor(m => m.Country,
        new SelectList(new[] { "Nigeria", "United States" }),
        "Select Country",
        new { @class = "form-control" })
</div>

<div class="form-group">
    <label>Annual Income</label>
    @Html.TextBoxFor(m => m.Income, new { @class = "form-control", type = "number", step = "0.01" })
</div>

<button type="submit" class="btn btn-primary">Calculate</button>
}

@if (ViewBag.Result != null)
{
    <div class="alert alert-success mt-3">
        @ViewBag.Result
    </div>
}

